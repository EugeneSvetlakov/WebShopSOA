@model LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="login-form">
            <!--login form-->
            <h2>Авторизация</h2>
            <form method="post" asp-action="Login" asp-antiforgery="true" style="max-width:35rem;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <span>
                    <input asp-for="RememberMe" class="checkbox">
                    @nameof(Model.RememberMe)
                </span>
                <input asp-for="ReturnUrl" readonly class="invisible" />
                <button type="submit" class="btn btn-default">Войти</button>
            </form>
        </div><!--/login form-->

    </div>
</section><!--/form-->