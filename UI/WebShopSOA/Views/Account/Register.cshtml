@model RegisterUserViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<section id="form">
    <div class="container">
        <div class="signup-form">
            <!--sign up form-->
            <h2>Регистрация</h2>
            <form method="post" asp-action="Register" asp-antiforgery="true" style="max-width:35rem;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                
                <input asp-for="Email" placeholder="@nameof(Model.Email)" />
                <span asp-validation-for="Email" class="text-danger"></span>
                
                <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                <span asp-validation-for="Password" class="text-danger"></span>
                
                <input asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                
                <button type="submit" class="btn btn-default">Зарегистрироваться</button>
            </form>
        </div><!--/sign up form-->
    </div>
</section>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}