@model IEnumerable<WebShopSOA.Domain.ViewModels.BrandViewModel>



<div class="brands_products">
    <!--brands_products-->
    <h2>Брэнды</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var item in Model)
            {
                <li><a asp-controller="Catalog" asp-action="Products" asp-route-BrandId="@item.Id"> <span class="pull-right">(@item.ProductCount)</span>@item.Name</a></li>
            }
        </ul>
    </div>
</div><!--/brands_products-->