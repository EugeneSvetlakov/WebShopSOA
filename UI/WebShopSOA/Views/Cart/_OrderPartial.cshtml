@model OrderViewModel

<form method="post" asp-antiforgery="true" asp-action="CheckOut">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Name" placeholder="@nameof(Model.Name)" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Phone" placeholder="@nameof(Model.Phone)" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Address" placeholder="@nameof(Model.Address)" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    @{
        ViewData.TryGetValue("ItemsInCart", out var ItemsInCart);
    }
    
    @{
    if ((int)ItemsInCart > 0)
    {
        <input type="submit" value="Оформить заказ" class="btn btn-default check_out" />
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Для оформления заказа добавьте товары в корзину.
        </div>
    }
    }
</form>