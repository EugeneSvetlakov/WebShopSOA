@model IEnumerable<WebShopSOA.ViewModels.EmployeeView>
@{
    var isAdmin = User.IsInRole("Administrators"); // для удобства
}

<h2>Список сотрудников</h2>
<div>
    @if (isAdmin)
    {
        <a asp-action="Edit" class="btn btn-success">Добавить</a>
    }
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@item.Id.ToString(), "Details", new { id = item.Id })
                </td>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.Patronymic</td>
                @if (isAdmin)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-cut"></i></a>
                    </td>
                }
            </tr>
        }
    </table>
</div>
